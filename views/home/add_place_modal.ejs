<div id="add-place" class="modal">
    <div class="modal-content">
        <h4>Adicione um lugar!</h4>

        <div class="row">
            <form class="col s12" action="/add_place" method="POST">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Rua XV de Novembro, 52, Curitiba" id="address" name="address" type="text" class="validate">
                        <label for="address">Address</label>
                    </div>
                    <div class="input-field col s6">
                        <input placeholder="Asilo de Gorpa" id="description" name="description" type="text" class="validate">
                        <label for="address">Description</label>
                    </div>
                    <div class="input-field col s12">
                        <input type="submit" class="btn waves-effect waves-light" value="Submit">
                    </div>
                </div>
            </form>

            <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span>Login Facebook</a>
        </div>
    </div>
</div>
