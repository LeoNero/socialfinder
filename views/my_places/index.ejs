<% include ../header %>
<body>

    <h2>Hi, <%- user.name %>!</h2>

    <% if (places.length == 0) { %>
        <p><strong>You haven't added anything yet :P</strong></p>
    <% } else { %>
        <% places.forEach(function(place, index) { %>
            <p><strong>Endereço: </strong><%- place.geo_name %></p>
            <p><strong>O que fazem lá: </strong><%- place.description %></p>
            <form action="my_places/<%- place._id %>" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button type="submit" href="#" class="waves-effect waves-light btn red">Delete place</button>
            </form>
            <br>
            <br>
        <% }) %>
    <% } %>

</body>
<% include ../footer %>
